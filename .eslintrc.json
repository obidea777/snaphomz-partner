{
  "extends": ["next", "next/core-web-vitals", "eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-unused-vars": "warn",
    "prettier/prettier": "warn",
    "no-console": "warn"
  },
  "globals": {
    "React": true,
    "JSX": true,
    "describe": true,
    "it": true,
    "expect": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "plugins": ["@typescript-eslint", "prettier"]
}
